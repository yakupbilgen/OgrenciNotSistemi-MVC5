@using OgrenciNotMvc.Models.EntityFramework
@model List<TBLKULUPLER>
    @{
        ViewBag.Title = "Index";
        Layout = "~/Views/Shared/_Layout.cshtml";
    }

    <table class="table table-bordered">
        <tr>
            <th>Kulüp ID</th>
            <th>Kulüp Adı</th>
            <th>İşlemler</th>
        </tr>
        <tbody>
            @foreach (var kulup in Model)
            {
            <tr>
                <td>@kulup.KULUPID</td>
                <td>@kulup.KULUPAD</td>
                <td>
                    <a href="~/Kulupler/Sil/@kulup.KULUPID" class="btn btn-danger">Sil</a>
                    <a href="~/Kulupler/KulupGetir/@kulup.KULUPID" class="btn btn-success">Guncelle</a>
                </td>
            </tr>
            }
        </tbody>
    </table>
<a href="~/Kulupler/YeniKulupEkle" class="btn btn-primary">Yeni Kulüp Ekle</a>
