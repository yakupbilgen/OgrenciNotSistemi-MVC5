@using OgrenciNotMvc.Models.EntityFramework
@model List<TBLOGRENCILER>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<table class="table table-bordered">
    <tr>
        <th>Öğrenci ID</th>
        <th>Öğrenci Ad</th>
        <th>Öğrenci Soyad</th>
        <th>Öğrenci Cinsiyet</th>
        <th>Öğrenci Kulüp</th>
        <th>İşlemler</th>
    </tr>
    <tbody>
        @foreach (var ogr in Model)
        {
        <tr>
            <td>@ogr.OgrenciID</td>
            <td>@ogr.OGRAd</td>
            <td>@ogr.OGRSoyad</td>
            <td>@ogr.OGRCinsiyet</td>
            <td>@ogr.TBLKULUPLER.KULUPAD</td>
            <td>
                <a href="~/Ogrenciler/Sil/@ogr.OgrenciID" class="btn btn-danger">Sil</a>
                <a href="~/Ogrenciler/OgrenciGetir/@ogr.OgrenciID" class="btn btn-success">Güncelle</a>
            </td>
        </tr>
        }
    </tbody>
</table>
<a href="~/Ogrenciler/YeniOgrenciEkle" class="btn btn-primary">Yeni Öğrenci Ekle</a>
